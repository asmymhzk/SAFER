{% extends 'base.html.twig' %}
 
{% block title %} {% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
       
<section class="bg-light p-3">
        <h1>Vos favoris :</h1>
    </section>
    
<table class="table">
<thead>
<tr>
<th>Propriété</th>
<th>Prix</th>
<th>Actions</th>
</tr>
</thead>
<tbody>
{% for element in dataPanier %}
<tr>
<td>{{ element.produit.titre}} </td>
<td>{{ element.produit.prix}} € </td>
<td> 
<a href= "{{path("favoris_delete", {id: element.produit.id})}} "class="btn btn-warning">
<i class="fa-solid fa-xmark"></i>
</a>
<a href= "#" class="btn btn-success">
<i class="fa-solid fa-envelope"></i>
</a>
</td>
</tr>
{% else %}
<tr> 
<td colspan="5" class="text-center"> Vous n'avez aucun favoris </td>
</tr>
{% endfor %}
</tbody>

<tfoot>
<tr>
<td>
<a href="{{path("favoris_delete_all")}}" class="btn btn-danger">
<i class="fa-solid fa-xmark"></i>
</a>
<p>Tout supprimer</p>
</td>
</tr>
</tfoot>

</table>

{% endblock %}
