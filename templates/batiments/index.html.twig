{% extends 'base.html.twig' %}

{% block title %}Bâtiments{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Catégorie Bâtiments</h1>

</div>
</br>
</br>

<div class="container">

{% for property in properties %}

<div class="grix xs2 sm3 gutter-0 card">

<div class="primary flex vcenter fx-center">

{% if property.prix == 700 %}
<img src="{{ asset('assets/img/SAFER/48EL11345.jpg') }}" alt="">

{%elseif property.prix == 860 %}
<img src="{{ asset('assets/img/SAFER/23.16.104.jpg') }}" alt="">

{%elseif property.prix == 650 %}
<img src="{{ asset('assets/img/SAFER/64.03.60.jpg') | imagine_filter('my_thumb')}}" alt="">

{%elseif property.prix == 200000 %}
<img src="{{ asset('assets/img/SAFER/44 22 AN 08.jpg')| imagine_filter('my_thumb') }}" alt="">

{%elseif property.prix == 1500000 %}
<img src="{{ asset('assets/img/SAFER/34VI6979.jpg') | imagine_filter('my_thumb')}}" alt="">

{%else%}
<img src="{{ asset('assets/img/SAFER/34AG10897.jpg') }}" alt="">
{%endif %}

</div>
<div class="col-sm2">

<div class="card-header">{{property.titre}} 
</br> Prix: {{property.prix}} €
</br> {{property.StatusType}}
</div>
<div class="card-content">
<p>
{{property.description}}
</p>
<a href="{{path("favoris_add", {id: property.id})}}" class="btn btn-success">
<i class="fas fa-heart"></i> Ajouter aux favoris
</a>
</div>
</div>
</div>

{%endfor%} 
</div>
{% endblock %}
