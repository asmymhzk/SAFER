{% extends 'base.html.twig' %}

{% block title %}Bois{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Catégorie Bois</h1>

</div>
</br>
</br>


<div class="container">

{% for property in properties %}

<div class="grix xs2 sm3 gutter-0 card">
<div class="primary flex vcenter fx-center">

{% if property.prix == 500 %}
<img src="{{ asset('assets/img/SAFER/65.23.876.jpg') }}" alt="">

{%elseif property.prix == 30000 %}
<img src="{{ asset('assets/img/SAFER/345E7EG.jpg') }}" alt="">

{%elseif property.prix == 400000 %}
<img src="{{ asset('assets/img/SAFER/81EL11100.jpg') }}" alt="">

{%elseif property.prix == 800 %}
<img src="{{ asset('assets/img/SAFER/344334UJ.jpg') }}" alt="">

{%elseif property.prix == 12000 %}
<img src="{{ asset('assets/img/SAFER/QDSGF56.jpg') }}" alt="">

{%else%}
<img src="{{ asset('assets/img/SAFER/3320.jpg') | imagine_filter('my_thumb')}}" alt="">

{%endif %}

</div>

<div class="col-sm2">
<div class="card-header">{{property.titre}} 
</br> Prix: {{property.prix}} €
</br> {{property.StatusType}}
</div>
<div class="card-content">
<p>
{{property.description}}
</p>
<a href="{{path("favoris_add", {id: property.id})}}" class="btn btn-success">
<i class="fas fa-heart"></i> Ajouter aux favoris
</a>
</div>
</div>
</div>

{%endfor%} 
</div>

{% endblock %}


